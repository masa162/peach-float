// src/components/NavBar.astro
---
// ナビゲーションのリンク情報など
const navLinks = [
    { href: "/series", text: "シリーズ" },
    { href: "/characters", text: "キャラクター" }, // ドキュメントのサイトマップに合わせて調整 [cite: 1]
    { href: "/about", text: "About" }, // ドキュメントのサイトマップに合わせて調整 [cite: 1]
];
---
<nav class="bg-gray-100 dark:bg-gray-800 shadow-md">
    <div class="container mx-auto px-6 py-3 flex justify-between items-center">
        <a href="/" class="text-xl font-bold text-gray-800 dark:text-white">Peach Float</a>
        <div class="space-x-4">
            {navLinks.map(link => (
                <a href={link.href} class="text-gray-800 dark:text-gray-200 hover:text-blue-500">{link.text}</a>
            ))}
            {/* ダークモードトグルなどもここに追加できます */}
        </div>
    </div>
</nav>