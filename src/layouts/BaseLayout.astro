---
import "../styles/global.css";
import Header from "../components/Header.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
---
<!DOCTYPE html>
<html lang="ja" class="scroll-smooth bg-peach-50 dark:bg-gray-900">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- ページごとに <slot name="title" /> を渡したい場合はこちらで対応 -->
    <title><slot name="title" /></title>

    <!-- ダークモード初期化スクリプト -->
    <script src="/theme-init.js" inline></script>
  </head>

  <body class="font-sans text-gray-800 dark:text-gray-200 antialiased">
    <!-- ヘッダー / ナビ -->
    <Header />

    <!-- メインコンテンツ -->
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- ダークモード切替ボタンなど -->
    <ThemeToggle />
  </body>
</html>
